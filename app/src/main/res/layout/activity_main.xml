<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/single_entrance"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_entrance"
        android:gravity="center"
        android:text="SingleVisualizeView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/reflect_entrance"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_entrance"
        android:gravity="center"
        android:text="ReflectVisualizeView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/circle_entrance"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_entrance"
        android:gravity="center"
        android:text="CircleVisualizeView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/wave_entrance"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_entrance"
        android:gravity="center"
        android:text="WaveVisualizeView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/net_entrance"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_entrance"
        android:gravity="center"
        android:text="NetVisualizeView"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/grain_entrance"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_entrance"
        android:gravity="center"
        android:text="GrainVisualizeView"
        android:textColor="#FFFFFF" />

</LinearLayout>